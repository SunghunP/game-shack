<!DOCTYPE html>
<html lang="en">
	<%- include("./partials/head.ejs") %> 

<body id="index-body">
	<%- include("partials/header.ejs") %> 
	<div class="content-wrapper flex-cntr">
		<div class="games flex-cntr">
			<% games.forEach( game => { %>
				<div class="game-cntr flex-cntr col">
					<div class="img-cntr">
						<a href="/games/<%= game._id %>"><img src="<%= game.img %>" alt="Image of <%= game.name %>"></a>
					</div>
					<div class="text-cntr flex-cntr col">
						<div class="name-cntr"><%= game.name %> </div>
						<div class="price-cntr">Price: <%= game.price %> </div>
						<div class="qty-cntr">Quantity: <%= game.qty %> </div>
					</div>
				</div>
			<% }) %>
		</div>
	</div>
</body>
</html>